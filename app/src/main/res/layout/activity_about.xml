<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menu.about.AboutActivity">
    <include layout="@layout/main_toolbar"/>
    <RelativeLayout
        android:padding="@dimen/dimen_16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lay_1"
            android:layout_above="@+id/lay_versi"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="-50dp"
                android:layout_marginRight="-50dp"
                android:src="@drawable/logo_rect"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_80dp" />
            <TextView
                android:id="@+id/tv_tagline"
                style="@style/Text.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Ride Your Better Life!"
                android:textColor="@color/grey_800" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_56dp"
            android:id="@+id/lay_versi"
            android:layout_above="@+id/lay_bio"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_appname"
                style="@style/Text.Title.Banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RIDE v 1.0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_10dp"
            android:id="@+id/lay_bio"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="@dimen/dimen_128dp"
                android:src="@drawable/foto_aulia"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_128dp"
                android:orientation="vertical">
                <TextView
                    style="@style/Text.Caption"
                    android:text="Dikembangkan oleh :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/StandardText"
                    android:text="Aulia Diah Pratiwi, S.Pd."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/Text.Caption"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="Dibimbing oleh :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/StandardText"
                    android:text="Dr. Suwarjo, M.Si."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/Text.Caption"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="Instansi :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/logouny"
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp" />
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:layout_gravity="center_vertical"
                        style="@style/StandardText"
                        android:text="BK â€“ PPs UNY 2019"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>