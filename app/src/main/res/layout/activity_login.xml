<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_home_gradient"
    android:layout_height="match_parent"
    tools:context=".menu.login.LoginActivity">
    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/kenburns_effect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"/>
    <!--<ImageView
        android:src="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
         />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/lay_login"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="-20dp"
            android:id="@+id/logo"
            android:layout_width="@dimen/dimen_128dp"
            android:layout_height="@dimen/dimen_128dp"
            android:src="@drawable/logo" />
        <TextView
            android:layout_marginTop="-20dp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/grey_900"
            android:text="Hai, Rider! RIDE akan membantumu meningkatkan ketentraman hatimu melalui keyakinanmu, agar kamu dapat memaknai ibadahmu di akhir masa remajamu dengan hal-hal yang lebih positif"
            style="@style/Text.Standard"/>
    </LinearLayout>
    <id.ac.uny.riset.ride.utils.animation.AnimationToggle
        android:id="@+id/lay_login"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:padding="@dimen/dimen_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                style="@style/EditText"
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_tranperant"
                android:hint="Email"
                android:inputType="text"
                android:padding="@dimen/dimen_16dp"
                android:textColor="@color/grey_800"
                android:textColorHint="@color/grey_800" />
            <EditText
                android:layout_marginTop="@dimen/dimen_10dp"
                style="@style/EditText"
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_tranperant"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="@dimen/dimen_16dp"
                android:textColor="@color/grey_800"
                android:textColorHint="@color/grey_800" />

            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_login"
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="47.5dp"
                android:background="@drawable/button_gradient"
                android:text="L O G I N"
                android:textColor="@color/grey_800" />
            <LinearLayout
                android:id="@+id/lay_lupapassword"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/grey_800"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/StandardText"
                    android:text="Lupa Password? "/>
                <TextView
                    android:textColor="@color/grey_800"
                    android:id="@+id/tv_lupapassword"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:textStyle="bold"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/StandardText"
                    android:text="Klik disini"/>
            </LinearLayout>
            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="@color/grey_800"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StandardText"
                android:text="atau"/>
            <LinearLayout
                android:id="@+id/lay_daftar"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/grey_800"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/StandardText"
                    android:text="Belum punya akun? "/>
                <TextView
                    android:textColor="@color/grey_800"
                    android:id="@+id/tv_daftar"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:textStyle="bold"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/StandardText"
                    android:text="Daftar disini"/>
            </LinearLayout>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logouny"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp" />
            <TextView
                style="@style/Text.Caption"
                android:layout_gravity="center_horizontal"
                android:text="Aulia Diah Pratiwi, S.Pd. â€“ BK PPs UNY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </id.ac.uny.riset.ride.utils.animation.AnimationToggle>
    <include layout="@layout/layout_helper"/>
</RelativeLayout>