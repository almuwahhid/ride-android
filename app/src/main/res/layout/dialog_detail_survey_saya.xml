<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/lay_dialog"
    android:background="@color/white"
    android:padding="@dimen/dimen_16dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:text="Poin"
                style="@style/Text.Title.Banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/img_close"
                style="@style/clickable"
                android:layout_gravity="right"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_coin"
                android:layout_width="@dimen/dimen_56dp"
                android:layout_height="@dimen/dimen_56dp" />
            <TextView
                android:paddingLeft="@dimen/dimen_4dp"
                android:id="@+id/tv_skor"
                android:textColor="#DCA815"
                android:text="4"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_24dp"
                style="@style/Text.Title.Banner"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_content"
            android:textAlignment="center"
            android:text="Lorem Ipsum adalah contoh teks atau dummy dalam industri percetakan dan penataan huruf atau typesetting. Lorem Ipsum telah menjadi standar contoh teks "
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>