<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/lay_dialog"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_close"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_24dp"/>
        <ImageView
            android:id="@+id/img_ilustrasi"
            android:layout_gravity="center"
            android:src="@drawable/ic_rating"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_width="@dimen/dimen_56dp"
            android:layout_height="@dimen/dimen_56dp" />
        <TextView
            style="@style/Text.Standard"
            android:id="@+id/tv_konfirmasi"
            android:padding="@dimen/dimen_16dp"
            android:text="Selamat, Anda mendapatkan motor RX King"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_konfirmasi"
            android:textColor="@color/white"
            android:text="SAYA MENGERTI"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:background="@drawable/button_gradient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>